<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/llDashBoard"
    android:layout_height="match_parent">
    <include layout="@layout/customer_header_details"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:background="@color/bg_back_color"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:background="@drawable/bandhan_logo"
                    android:elevation="@dimen/_20sdp"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.AppCompatImageView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="@string/bank_name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_20ssp"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatTextView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textSize="@dimen/_10ssp"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatTextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llLoan"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_20sdp"
                android:gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/shape_rectangle"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/loan_function"
                    android:layout_gravity="center"
                    style="@style/Text"

                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.AppCompatTextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llGroup"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:padding="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/shape_rectangle"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/group_function"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content">

                </androidx.appcompat.widget.AppCompatTextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCasa"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:padding="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/shape_rectangle"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:text="@string/casa_function"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content">
                </androidx.appcompat.widget.AppCompatTextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>